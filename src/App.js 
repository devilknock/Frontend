import React, { useEffect, useState } from 'react';

function App() {
  const [message, setMessage] = useState('Loading...');

  useEffect(() => {
    fetch('http://localhost:5000/') // yahan apne backend ka URL daalna
      .then(res => res.json())
      .then(data => setMessage(data.message))
      .catch(() => setMessage('Backend se connection failed'));
  }, []);

  return (
    <div style={{ textAlign: 'center', marginTop: '100px' }}>
      <h1>ğŸš€ Frontend Connected!</h1>
      <p>{message}</p>
    </div>
  );
}

export default App;

